extends layouts/main

block content
    .form-container
        form(action=`/users/${routes.editProfile}`,method="post",enctype="multipart/form-data")
            .fileUpload
                label(for="avatar") Avatar
                input(type="file", id="avatar", name="avatar",accept="image/*")
            input(type="text",name="name",placeholder="이름",value=loggedUser.name)
            input(type="email",name="email",placeholder="이메일",value=loggedUser.email,disabled)
            input(type="submit",value="프로필 수정")
        a.form-container__link(href=`/users${routes.changePassword}`)
            button 비밀번호 변경
