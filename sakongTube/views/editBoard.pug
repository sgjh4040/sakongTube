extends layouts/main

block content
    .form-container
            form(action=routes.editBoard(board._id),method="post")
                input(type="text",name="title",placeholder="글제목",required=true,value=board.title)
                textarea(cols="30", rows="10",name="content",placeholder="글작성",required=true)=board.content
                input(type="submit",value="수정")